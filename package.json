{
  "name": "singularity-iot-security",
  "version": "1.0.0",
  "description": "Singularity - Otomotiv IoT Siber Güvenlik ve Kestirimci Bakım Platformu",
  "main": "script.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "serve": "python -m http.server 8000"
  },
  "keywords": [
    "iot",
    "cybersecurity",
    "automotive",
    "pwa",
    "dashboard"
  ],
  "author": "Singularity Team",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "script.js",
      "map-functions.js",
      "dashboard-fixes.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    }
  }
}
